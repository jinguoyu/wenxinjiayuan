/**app.wxss**/
@import "colorui/main.wxss";
@import "colorui/icon.wxss";
@import "lib/weui.wxss";
page {
	font-family: "微软雅黑";
	height: 100%;
	width: 100%;
	background-color: #fff;
}
.top{
	position:fixed;
	width:100%;
	z-index:100;
	height: 80rpx;
	background: #f4f5f6;
	left:0;
	top:0;
	white-space: nowrap;
}
.ggwx-newsTab{
	display: flex;
	align-items: center;
	justify-content: space-around;
	background-color:#f4f5f6;
}
.ggwx-newsTab .ggwx-newsTabBlock {
	display: flex;
	align-self: center;
	padding: 22rpx;
	font-size: 30rpx;
	color: #444;
}

.ggwx-newsTabSelected {
	color: #ff5252 !important;
	border-bottom: 2px solid #ff5252;
}
